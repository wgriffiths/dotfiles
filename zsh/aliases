# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias aliases='mate ~/.dotfiles/zsh/aliases'
alias gwaith='cd ~/svn'
alias snap='cd ~/svn/SnapOn'
alias c='cd'
alias d='cd ~/.dotfiles'
alias dmate='mate ~/.dotfiles'
alias u='cd ..'

alias adra='cd ~/git'
alias ff='cd ~/git/FfynnonFelys'
alias 360='cd ~/git/ffestiniog360_rails'

alias b='ssh wg@brenig'
alias bdev='ssh wg@brenig'
alias ogwen='ssh wg@ogwen'
alias cwmni='ssh will@cwmni.com'

alias mvnnt='mvn -U -Dmaven.test.skip=true clean install'
alias mvnt='mvnnt'
alias tm='mvn -PTMEdit tm:edit'
alias tmo='mvn -PTMEdit --offline tm:edit'
alias dds='more ~/dds_settings.xml'

alias sc='svn commit'
alias sup='svn update'
alias sdiff='svn diff | more'

alias update='svn update && mvnnt'

alias bi='bundle install'
alias be='bundle exec'
alias bu='bundle update'
alias gadd='git add .'
alias gc='git commit'
alias gca='git commit -a'
alias gcaa='git commit -a --amend -C HEAD'
alias gcl='git clone'
alias gcm='git commit -m'
