# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi


alias aliases='mate ~/.dotfiles/zsh/aliases'
alias code='cd ~/svn'
alias snap='cd ~/svn/SnapOn'
alias c='cd'
alias d='cd ~/.dotfiles'
alias u='cd ..'

alias b='ssh brenig'
alias bdev='ssh brenig'
alias ogwen='ssh ogwen'

alias mvnnt='mvn -U -Dmaven.test.skip=true clean install'
alias mvnt='mvnnt'
alias tm='mvn -PTMEdit tm:edit'
alias tmo='mvn -PTMEdit --offline tm:edit'
alias dds='more ~/dds_settings.xml'

alias sc='svn commit'
alias sup='svn update'
alias sdiff='svn diff | more'

alias update='svn update && mvnnt'